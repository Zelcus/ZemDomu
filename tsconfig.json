{
    "compilerOptions": {
      "outDir": "out",
      "module": "commonjs",
      "target": "es2018",
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ],
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true
    },
    "include": ["src"]
  }
  